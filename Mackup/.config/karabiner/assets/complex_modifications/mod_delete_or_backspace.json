{
    "title": "mod_delete_or_backspace",
    "rules": [
        {
            "description": "Change delete_or_backspace to fn if pressed with other keys and forward",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "fn"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "delete_forward"
                        }
                    ]
                }
            ]
        }
    ]
}
