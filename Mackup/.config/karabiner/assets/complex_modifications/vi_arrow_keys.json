{
    "title": "Vi Arrow Keys",
    "maintainers": ["dm"],
    "rules": [
        {
            "description": "f + hjkl as arrow keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "simultaneous": [
                            {
                                "key_code": "f"
                            },
                            {
                                "key_code": "h"
                            }
                        ],
                        "simultaneous_options": {
                            "key_down_order": "strict",
                            "key_up_order": "strict_inverse",
                            "to_after_key_up": [
                                {
                                    "set_variable": {
                                        "name": "vi_arrow_key_mode",
                                        "value": 0
                                    }
                                }
                            ]
                        },
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "vi_arrow_key_mode",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "parameters": {
                        "basic.simultaneous_threshold_milliseconds": 250
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vi_arrow_key_mode",
                            "value": 1
                        }
                    ]
                },
                {
