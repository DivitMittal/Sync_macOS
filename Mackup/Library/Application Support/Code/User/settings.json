{
	"terminal.integrated.inheritEnv": false,
	"editor.tabSize": 4,

	"editor.wordWrap": "on",
	"diffEditor.wordWrap": "on",
	"diffEditor.ignoreTrimWhitespace": true,
	"editor.inlayHints.enabled": false,
	"editor.inlineSuggest.enabled": true,
	"telemetry.telemetryLevel": "off",
	"files.autoSave": "afterDelay",
	"workbench.startupEditor": "none",
	"security.workspace.trust.enabled": false,

	// Customize UI
	"workbench.useExperimentalGridLayout": true,
	"customizeUI.activityBar": "bottom",
	"customizeUI.titleBar": "inline",
	"window.titleBarStyle": "native",

	//Github CoPilot - Extension
	"github.copilot.enable": {
		"*": true,
		"yaml": true,
		"plaintext": true,
		"markdown": true
	},

	//Code Spell Checker - Extension
	"cSpell.enableFiletypes": ["gas"],
	"cSpell.userWords": [
		"asciz",
		"cmpq",
		"decq",
		"divitmittal",
		"dotenv",
		"dtype",
		"leaq",
		"movq",
		"mulq",
		"popq",
		"printf",
		"pushq",
		"scanf",
		"shlq",
		"shrq",
		"syscall"
	],

	// Appearance
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"workbench.sideBar.location": "right",
	"workbench.view.alwaysShowHeaderActions": true,
	"editor.fontFamily": "'CaskaydiaCove Nerd Font', 'Courier New', monospace",
	"editor.fontSize": 16,
	"editor.fontLigatures": true,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorTheme": "Noctis High Contrast",
	"editor.renderIndentGuides": true,
	"workbench.colorCustomizations": {
		"editor.lineHighlightBackground": "#1073cf2d",
		"editor.lineHighlightBorder": "#9fced11f"
	},

	//Vim
	"editor.lineNumbers": "relative",
	"vim.surround": true,
	"vim.easymotion": true,
	"vim.neovimPath": "/usr/local/bin/nvim",
	"vim.enableNeovim": true,
	"vim.insertModeKeyBindings": [
		{
			"before": ["q", "i"],
			"after": ["<Esc>"]
		}
	],

	//Python
	"python.defaultInterpreterPath": "/usr/local/bin/python3",
	"python.pythonPath": "/usr/local/Caskroom/miniconda/base/envs/gen__env/bin/python",
	"python.linting.pylintEnabled": false,
	"python.linting.enabled": true,

	//Jupyter IPython Notebooksk
	"jupyter.allowUnauthorizedRemoteConnection": true,
	"jupyter.alwaysScrollOnNewCell": true,

	//Prettier - Extension
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"window.zoomLevel": 1,
	"vscode-edge-devtools.mirrorEdits": true,
	"editor.cursorBlinking": "smooth",
	"editor.minimap.renderCharacters": false,
	"editor.minimap.maxColumn": 100,
	"editor.quickSuggestionsDelay": 5,

	"terminal.integrated.fontFamily": "'CaskaydiaCove Nerd Font', 'Courier New', monospace",
	"terminal.integrated.fontSize": 14,
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"files.trimFinalNewlines": true,
	"files.simpleDialog.enable": true,
	"workbench.enableExperiments": false,
	"workbench.activityBar.iconClickBehavior": "focus",
	"workbench.tips.enabled": false,
	"workbench.editor.untitled.hint": "hidden",
	"editor.accessibilitySupport": "off",
	"python.linting.flake8Enabled": false,
	"python.linting.banditEnabled": true,
	"terminal.integrated.defaultProfile.osx": "fish"
}
