// Visual Studio Code Settings
{
    //Diff Editor
    "diffEditor.wordWrap": "on",
    "diffEditor.ignoreTrimWhitespace": true,

    //Security
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.emptyWindow": false,
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.startupPrompt": "never",

    //Telemetry
    "telemetry.telemetryLevel": "off",

    //Customize UI - Extension
    "customizeUI.titleBar": "frameless",
    "customizeUI.activityBar": "bottom",

    //Github CoPilot - Extension
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },

    //Code Spell Checker - Extension
    "cSpell.enableFiletypes": ["gas"],
    "cSpell.userWords": [
        "asciz",
        "cmpq",
        "decq",
        "Divit",
        "divitmittal",
        "dotenv",
        "dtype",
        "leaq",
        "movq",
        "mulq",
        "popq",
        "printf",
        "pushq",
        "scanf",
        "shlq",
        "shrq",
        "spacebar",
        "syscall"
    ],

    //VSCode Neovim - Extension
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",

    //Python - Extension
    "python.defaultInterpreterPath": "/usr/local/Caskroom/miniconda/base/envs/gen__env/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.banditEnabled": true,

    //Jupyter IPython Notebook - Extension
    "jupyter.allowUnauthorizedRemoteConnection": true,
    "jupyter.alwaysScrollOnNewCell": false,
    "jupyter.themeMatplotlibPlots": true,

    //Prettier - Extension
    "prettier.tabWidth": 4,

    //Edge Dev Tools - Extension
    "vscode-edge-devtools.mirrorEdits": true,

    //Window
    "window.zoomLevel": 1.5,
    "window.titleBarStyle": "native",

    //Files
    "files.eol": "\n",
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.simpleDialog.enable": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    //Terminal
    "terminal.integrated.profiles.osx": {
        "Fish": {
            "path": "/usr/local/bin/fish"
        },
        "Bash": {
            "path": "/bin/bash"
        },
        "Shell": {
            "path": "/bin/sh"
        }
    },
    "terminal.integrated.defaultProfile.osx": "Fish",
    "terminal.integrated.fontFamily": "'CaskaydiaCove Nerd Font', 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": false,
    "terminal.external.osxExec": "kitty.app",

    //Workbench
    "workbench.enableExperiments": false,
    "workbench.tips.enabled": false,
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.activityBar.iconClickBehavior": "focus",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.iconTheme": "vscode-big-icons",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Noctis High Contrast",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#1073cf2d",
        "editor.lineHighlightBorder": "#9fced11f",
        "editorCursor.foreground": "#ff0000",
        "terminalCursor.foreground": "#ff0000",
        "editorWhitespace.foreground": "#ffffffc8"
    },
    "workbench.sideBar.location": "right",

    //Editor
    "editor.largeFileOptimizations": false,
    "editor.lineNumbers": "relative",
    "editor.renderLineHighlight": "none",
    "editor.cursorBlinking": "smooth",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 50,
    "editor.quickSuggestionsDelay": 5,
    "editor.fontFamily": "'CaskaydiaCove Nerd Font', 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.wordWrap": "off",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.accessibilitySupport": "off",
    "editor.inlayHints.enabled": true,
    "editor.inlineSuggest.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    //"editor.guides.bracketPairs": "active",
    "editor.tabCompletion": "on",
    "editor.stickyTabStops": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "editor.scrollBeyondLastLine": false,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.tokenColorCustomizations": {
        "comments": "#3c8cfa"
    },
    "editor.colorDecorators": false,

    //Explorer
    "explorer.confirmDelete": false,

    //TODOTree - Extension
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS).*(\\n\\s*//\\s{2,}.*)*",
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "type": "text-and-comment",
        "foreground": "black",
        "background": "white",
        "opacity": 50,
        "iconColour": "blue",
        "gutterIcon": true
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "check",
            "foreground": "black",
            "background": "white",
            "iconColour": "white"
        },
        "NOTE": {
            "icon": "note",
            "foreground": "white",
            "background": "gray",
            "iconColour": "gray"
        },
        "COMMENT": {
            "icon": "note",
            "foreground": "white",
            "background": "gray",
            "iconColour": "gray"
        },
        "FIXME": {
            "foreground": "black",
            "background": "yellow",
            "iconColour": "yellow"
        },
        "BUG": {
            "foreground": "black",
            "background": "red",
            "iconColour": "red"
        },
        "[ ]": {
            "icon": "check",
            "foreground": "black",
            "background": "white",
            "iconColour": "yellow"
        },
        "[x]": {
            "icon": "check",
            "foreground": "white",
            "background": "green",
            "iconColour": "green"
        }
    },
    "todo-tree.general.tags": [
        "BUG",
        "FIXME",
        "TODO",
        "NOTE",
        "COMMENT",
        "[ ]",
        "[x]"
    ],

    //Update
    "update.mode": "manual",
    "update.showReleaseNotes": false,

    //Bookmarks - Extension
    "bookmarks.useWorkaroundForFormatters": true,

    //File Specific
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },

    //Java
    "[java]": {
        "editor.defaultFormatter": "redhat.java"
    },
    "redhat.telemetry.enabled": false,
    "java.jdt.ls.java.home": "/Library/Java/JavaVirtualMachines/openjdk.jdk/Contents/Home",
    "java.import.gradle.java.home": "/Library/Java/JavaVirtualMachines/openjdk.jdk/Contents/Home",
    "spring-boot.ls.java.home": "/Library/Java/JavaVirtualMachines/openjdk.jdk/Contents/Home",

    //XML
    "[xml]": {
        "editor.defaultFormatter": "DotJoshJohnson.xml"
    },

    //SCM
    "scm.alwaysShowRepositories": true,
    "scm.alwaysShowActions": true,

    //Render Line Endings - Extension
    "code-eol.highlightExtraWhitespace": true,
    "code-eol.highlightNonDefault": true
}
